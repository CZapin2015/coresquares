---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main style="max-width: 600px; margin: 2rem auto; padding: 0 1rem;">
      <h1>♟️ Welcome to CoreSquares</h1>
      <p>Your tactical edge in chess improvement.</p>
      <p>CoreSquares offers:</p>
      <ul>
        <li>Private lessons tailored to your level</li>
        <li>In‑depth tactics analysis</li>
        <li>Quick video tutorials and live streams</li>
      </ul>
      <p>
        Ready to sharpen your skills? 
        <a href="https://calendly.com/coreyzapin/coaching">Book a lesson</a> 
        or 
        <a href="http://www.youtube.com/@CoreyZapin">subscribe on YouTube</a>.
      </p>
    </main>
    <Footer />
  </body>
</html>